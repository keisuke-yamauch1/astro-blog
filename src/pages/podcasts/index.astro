---
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import PodcastPreview from '../../components/PodcastPreview.astro';
import { fetchPodcastFeed } from '../../utils/podcast';

const feed = await fetchPodcastFeed();
const { channel, episodes } = feed;
---

<BaseLayout title={`Podcast - ${channel.title}`} description={channel.description}>
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">Podcast</h1>
    <div
      class="flex items-start gap-4 p-4 bg-gray-50 dark:bg-gray-800/60 rounded-xl border border-gray-200 dark:border-gray-700"
    >
      {
        channel.image && (
          <img
            src={channel.image}
            alt={channel.title}
            class="w-24 h-24 rounded-lg object-cover"
          />
        )
      }
      <div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
          {channel.title}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 text-sm">
          {channel.description}
        </p>
        <a
          href={channel.link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center mt-2 text-primary-600 dark:text-primary-400 hover:underline text-sm"
        >
          listen.styleで聴く
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 ml-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <section class="flex flex-col gap-6">
    {episodes.map((episode) => <PodcastPreview episode={episode} />)}
  </section>
</BaseLayout>
