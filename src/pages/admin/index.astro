---
import BaseLayout from '../../layouts/BaseLayout.astro';
import fs from 'fs';
import path from 'path';

export const prerender = false;

// URLパラメータから edit を取得
const editFilename = Astro.url.searchParams.get('edit');
let editData = null;

if (editFilename) {
  const filepath = path.join(process.cwd(), 'src/content/diary', editFilename);
  if (fs.existsSync(filepath)) {
    const fileContent = fs.readFileSync(filepath, 'utf-8');

    // フロントマターと本文を分離
    const frontmatterMatch = fileContent.match(/^---\n([\s\S]*?)\n---\n([\s\S]*)$/);
    if (frontmatterMatch) {
      const frontmatterText = frontmatterMatch[1];
      const content = frontmatterMatch[2];

      // フロントマターをパース（簡易版）
      const titleMatch = frontmatterText.match(/^title:\s*(.+)$/m);
      const dateMatch = frontmatterText.match(/^date:\s*(.+)$/m);
      const conditionMatch = frontmatterText.match(/^condition:\s*(.+)$/m);

      editData = {
        title: titleMatch ? titleMatch[1] : '',
        date: dateMatch ? dateMatch[1] : '',
        condition: conditionMatch ? conditionMatch[1] : '',
        content: content.trim()
      };
    }
  }
}

const pageTitle = editData ? '日記を編集' : '新規日記';
---

<BaseLayout title={`${pageTitle} | 管理画面`}>
  <div id="auth-check"></div>

  <div id="admin-content" class="hidden">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">{pageTitle}</h1>
      <a href="/admin/drafts" class="text-blue-600 hover:underline">下書き一覧</a>
    </div>

    <form id="post-form" class="space-y-6">
      <!-- 日付 -->
      <div>
        <label for="date" class="block mb-2">日付: *</label>
        <input
          type="date"
          id="date"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
          required
        />
      </div>

      <!-- タイトル -->
      <div>
        <label for="title" class="block mb-2">タイトル: *</label>
        <input
          type="text"
          id="title"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
          required
        />
      </div>

      <!-- コンディション -->
      <div>
        <label for="condition" class="block mb-2">コンディション:</label>
        <input
          type="text"
          id="condition"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
        />
      </div>

      <!-- Markdownエディタ -->
      <div>
        <label class="block mb-2">本文: *</label>
        <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
        <textarea id="markdown-editor"></textarea>
      </div>

      <!-- ボタン -->
      <div class="flex gap-4">
        <button
          type="submit"
          class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
        >
          公開
        </button>
        <button
          type="button"
          id="preview-btn"
          class="px-6 py-2 bg-purple-600 text-white rounded hover:bg-purple-700"
        >
          プレビュー
        </button>
        <button
          type="button"
          id="save-draft-btn"
          class="px-6 py-2 bg-gray-600 text-white rounded hover:bg-gray-700"
        >
          下書き保存
        </button>
      </div>

      <div id="status" class="text-sm"></div>
    </form>
  </div>

  <!-- 編集データを埋め込む -->
  <script is:inline define:vars={{ editData, editFilename }}>
    window.__editData = editData;
    window.__editFilename = editFilename;
  </script>

  <script>
    import EasyMDE from 'easymde';

    // 編集データを取得
    let editData = window.__editData;
    const editFilename = window.__editFilename;

    // セッションストレージから復元を試みる（プレビュー後の編集に戻る場合）
    if (editData && editData.date) {
      // 編集モード: 日付ベースのキーで復元
      const storageKey = `admin-editor-original-${editData.date}`;
      const storedData = sessionStorage.getItem(storageKey);

      if (storedData) {
        try {
          const restoredData = JSON.parse(storedData);
          editData = restoredData;
          console.log('✓ Restored from sessionStorage (date-based):', editData.date);
        } catch (e) {
          console.warn('Failed to parse sessionStorage data', e);
          // パース失敗時はサーバーから取得したデータを使用
        }
      }
    } else if (!editData) {
      // 新規作成モード: プレビュー用のキーから復元
      const storedData = sessionStorage.getItem('admin-editor-preview-new');
      if (storedData) {
        try {
          editData = JSON.parse(storedData);
          sessionStorage.removeItem('admin-editor-preview-new');
          console.log('✓ Restored from sessionStorage (new mode):', editData.date);
        } catch (e) {
          console.warn('Failed to parse sessionStorage data', e);
        }
      }
    }

    // 認証チェック
    const token = localStorage.getItem('admin_token');
    if (!token) {
      window.location.href = '/admin/login';
    }

    document.getElementById('admin-content')?.classList.remove('hidden');

    // 日付フィールドのデフォルト値を今日に設定
    const dateInput = document.getElementById('date') as HTMLInputElement;
    const today = new Date().toISOString().split('T')[0];

    // 編集モードの場合はデフォルト値をセット
    if (editData) {
      dateInput.value = editData.date;
    } else {
      dateInput.value = today;
    }

    // EasyMDE初期化（モバイル最適化）
    const editor = new EasyMDE({
      element: document.getElementById('markdown-editor') as HTMLTextAreaElement,
      spellChecker: false,
      placeholder: 'ここに本文を書く...',
      status: false,  // モバイルで画面を広く使う
      toolbar: [
        'bold', 'italic', 'heading', '|',
        'quote', 'unordered-list', 'ordered-list', '|',
        'link', 'image', '|',
        'preview', 'fullscreen'
      ],
      autoDownloadFontAwesome: true,
      autosave: {
        enabled: true,
        // 編集モードと新規作成モードで異なるuniqueIdを使用
        uniqueId: editFilename ? `admin-editor-edit-${editFilename}` : 'admin-editor-new',
        delay: 1000,
      },
      previewRender: function(plainText) {
        // プレビューでも改行を<br>に変換（日記用）
        // 段落の区切り（ダブル改行）を保持しつつ、単一改行を<br>に変換
        return this.parent.markdown(plainText.replace(/\n/g, '  \n'));
      }
    });

    // デフォルトテンプレート（新規作成時用）
    const defaultTemplate = `

## 体調

## 見たり聞いたり読んだり

## 公開
`;

    // 編集モードの場合、フォームに値を設定
    if (editData) {
      document.getElementById('title').value = editData.title;
      document.getElementById('condition').value = editData.condition || '';
      editor.value(editData.content);
    } else {
      // 新規作成モード: autosaveデータがなければテンプレートを適用
      const autosaveKey = 'smde_admin-editor-new';
      const hasAutosave = localStorage.getItem(autosaveKey);
      if (!hasAutosave) {
        editor.value(defaultTemplate);
      }
    }

    // フォーム送信
    const form = document.getElementById('post-form') as HTMLFormElement;
    const statusDiv = document.getElementById('status')!;

    // 下書き保存ボタン
    const saveDraftBtn = document.getElementById('save-draft-btn');
    saveDraftBtn?.addEventListener('click', async () => {
      const date = (document.getElementById('date') as HTMLInputElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const condition = (document.getElementById('condition') as HTMLInputElement).value;
      const content = editor.value();

      if (!title || !content) {
        statusDiv.textContent = 'タイトルと本文は必須です';
        statusDiv.className = 'text-sm text-red-600';
        return;
      }

      const postData = {
        type: 'diary',
        date,
        title,
        condition,
        content,
        oldFilename: editFilename || undefined,
      };

      try {
        statusDiv.textContent = '下書き保存中...';
        statusDiv.className = 'text-sm text-blue-600';

        const response = await fetch('/admin/api/save-draft', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(postData)
        });

        const result = await response.json();

        if (result.success) {
          const year = date.split('-')[0];
          const month = date.split('-')[1];
          const day = date.split('-')[2];
          const previewUrl = `/admin/preview/diary/${year}/${month}/${day}`;

          statusDiv.innerHTML = `✓ ${result.message} <a href="${previewUrl}" class="underline" target="_blank">プレビューを見る</a>`;
          statusDiv.className = 'text-sm text-green-600';
        } else {
          statusDiv.textContent = `エラー: ${result.error}`;
          statusDiv.className = 'text-sm text-red-600';
        }
      } catch (error) {
        statusDiv.textContent = `エラー: ${(error as Error).message}`;
        statusDiv.className = 'text-sm text-red-600';
      }
    });

    // プレビューボタン
    const previewBtn = document.getElementById('preview-btn');
    previewBtn?.addEventListener('click', async () => {
      const token = localStorage.getItem('admin_token');
      if (!token) {
        alert('認証トークンが見つかりません。ログインしてください。');
        window.location.href = '/admin/login';
        return;
      }

      const date = (document.getElementById('date') as HTMLInputElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const condition = (document.getElementById('condition') as HTMLInputElement).value;
      const content = editor.value();

      // プレビュー前に元のコンテンツをセッションストレージに保存
      // 日付ベースのキーを使用（ファイル名変更に影響されない）
      const storageKey = `admin-editor-original-${date}`;
      const dataToStore = {
        title: title,
        date: date,
        condition: condition,
        content: content,
        timestamp: Date.now()
      };
      sessionStorage.setItem(storageKey, JSON.stringify(dataToStore));
      console.log('✓ Saved to sessionStorage (date-based):', date);

      // 新規作成モードの場合、追加のキーでも保存（ページリロード時の復元用）
      if (!editFilename) {
        sessionStorage.setItem('admin-editor-preview-new', JSON.stringify(dataToStore));
        console.log('✓ Saved to sessionStorage (new mode)');
      }

      if (!title || !content) {
        statusDiv.textContent = 'タイトルと本文は必須です';
        statusDiv.className = 'text-sm text-red-600';
        return;
      }

      try {
        statusDiv.textContent = 'プレビューを準備中...';
        statusDiv.className = 'text-sm text-gray-600';

        // 既存の下書き保存APIを使用（一時的な下書きとして保存）
        const response = await fetch('/admin/api/save-draft', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({
            date,
            title,
            condition,
            content
          })
        });

        const result = await response.json();

        if (result.success) {
          const [year, month, day] = date.split('-');
          const previewUrl = `/admin/preview/diary/${year}/${month}/${day}`;

          // 新しいタブでプレビューを開く
          window.open(previewUrl, '_blank');

          statusDiv.textContent = '';
          statusDiv.className = '';
        } else {
          statusDiv.textContent = `エラー: ${result.error}`;
          statusDiv.className = 'text-sm text-red-600';
        }
      } catch (error) {
        statusDiv.textContent = `エラー: ${(error as Error).message}`;
        statusDiv.className = 'text-sm text-red-600';
      }
    });

    // フォーム送信（公開）
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const date = (document.getElementById('date') as HTMLInputElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const condition = (document.getElementById('condition') as HTMLInputElement).value;
      const content = editor.value();

      const postData = {
        type: 'diary',
        date,
        title,
        condition,
        content,
        oldFilename: editFilename || undefined,
      };

      try {
        statusDiv.textContent = '公開中...';
        statusDiv.className = 'text-sm text-blue-600';

        const response = await fetch('/admin/api/create-post', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(postData)
        });

        const result = await response.json();

        if (result.success) {
          statusDiv.textContent = `✓ 公開成功: ${result.filename}`;
          statusDiv.className = 'text-sm text-green-600';

          // セッションストレージをクリア（日付ベース）
          const storageKey = `admin-editor-original-${date}`;
          sessionStorage.removeItem(storageKey);
          sessionStorage.removeItem('admin-editor-preview-new');
          console.log('✓ Cleared sessionStorage:', date);

          // EasyMDEの自動保存もクリア
          const autosaveKey = editFilename ? `admin-editor-edit-${editFilename}` : 'admin-editor-new';
          localStorage.removeItem(autosaveKey);

          // フォームリセット
          form.reset();
          editor.value('');
          dateInput.value = today;  // 日付も今日に戻す
        } else {
          statusDiv.textContent = `エラー: ${result.error}`;
          statusDiv.className = 'text-sm text-red-600';
        }
      } catch (error) {
        statusDiv.textContent = `エラー: ${(error as Error).message}`;
        statusDiv.className = 'text-sm text-red-600';
      }
    });
  </script>
</BaseLayout>