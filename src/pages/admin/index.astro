---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="管理画面">
  <div id="auth-check"></div>

  <div id="admin-content" class="hidden">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">新規日記</h1>
      <a href="/admin/drafts" class="text-blue-600 hover:underline">下書き一覧</a>
    </div>

    <form id="post-form" class="space-y-6">
      <!-- 日付 -->
      <div>
        <label for="date" class="block mb-2">日付: *</label>
        <input
          type="date"
          id="date"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
          required
        />
      </div>

      <!-- タイトル -->
      <div>
        <label for="title" class="block mb-2">タイトル: *</label>
        <input
          type="text"
          id="title"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
          required
        />
      </div>

      <!-- コンディション -->
      <div>
        <label for="condition" class="block mb-2">コンディション:</label>
        <input
          type="text"
          id="condition"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
        />
      </div>

      <!-- Markdownエディタ -->
      <div>
        <label class="block mb-2">本文: *</label>
        <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
        <textarea id="markdown-editor"></textarea>
      </div>

      <!-- ボタン -->
      <div class="flex gap-4">
        <button
          type="submit"
          class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
        >
          公開
        </button>
        <button
          type="button"
          id="save-draft-btn"
          class="px-6 py-2 bg-gray-600 text-white rounded hover:bg-gray-700"
        >
          下書き保存
        </button>
      </div>

      <div id="status" class="text-sm"></div>
    </form>
  </div>

  <script>
    import EasyMDE from 'easymde';

    // 認証チェック
    const token = localStorage.getItem('admin_token');
    if (!token) {
      window.location.href = '/admin/login';
    }

    document.getElementById('admin-content')?.classList.remove('hidden');

    // 日付フィールドのデフォルト値を今日に設定
    const dateInput = document.getElementById('date') as HTMLInputElement;
    const today = new Date().toISOString().split('T')[0];
    dateInput.value = today;

    // EasyMDE初期化（モバイル最適化）
    const editor = new EasyMDE({
      element: document.getElementById('markdown-editor') as HTMLTextAreaElement,
      spellChecker: false,
      placeholder: 'ここに本文を書く...',
      status: false,  // モバイルで画面を広く使う
      toolbar: [
        'bold', 'italic', 'heading', '|',
        'quote', 'unordered-list', 'ordered-list', '|',
        'link', 'image', '|',
        'preview', 'fullscreen'
      ],
      autoDownloadFontAwesome: true,
      autosave: {
        enabled: true,
        uniqueId: 'admin-editor',
        delay: 1000,
      },
    });

    // フォーム送信
    const form = document.getElementById('post-form') as HTMLFormElement;
    const statusDiv = document.getElementById('status')!;

    // 下書き保存ボタン
    const saveDraftBtn = document.getElementById('save-draft-btn');
    saveDraftBtn?.addEventListener('click', async () => {
      const date = (document.getElementById('date') as HTMLInputElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const condition = (document.getElementById('condition') as HTMLInputElement).value;
      const content = editor.value();

      if (!title || !content) {
        statusDiv.textContent = 'タイトルと本文は必須です';
        statusDiv.className = 'text-sm text-red-600';
        return;
      }

      const postData = {
        type: 'diary',
        date,
        title,
        condition,
        content,
      };

      try {
        statusDiv.textContent = '下書き保存中...';
        statusDiv.className = 'text-sm text-blue-600';

        const response = await fetch('/admin/api/save-draft', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(postData)
        });

        const result = await response.json();

        if (result.success) {
          const year = date.split('-')[0];
          const month = date.split('-')[1];
          const day = date.split('-')[2];
          const previewUrl = `/diary/${year}/${month}/${day}`;

          statusDiv.innerHTML = `✓ ${result.message} <a href="${previewUrl}" class="underline" target="_blank">プレビューを見る</a>`;
          statusDiv.className = 'text-sm text-green-600';
        } else {
          statusDiv.textContent = `エラー: ${result.error}`;
          statusDiv.className = 'text-sm text-red-600';
        }
      } catch (error) {
        statusDiv.textContent = `エラー: ${(error as Error).message}`;
        statusDiv.className = 'text-sm text-red-600';
      }
    });

    // フォーム送信（公開）
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const date = (document.getElementById('date') as HTMLInputElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const condition = (document.getElementById('condition') as HTMLInputElement).value;
      const content = editor.value();

      const postData = {
        type: 'diary',
        date,
        title,
        condition,
        content,
      };

      try {
        statusDiv.textContent = '公開中...';
        statusDiv.className = 'text-sm text-blue-600';

        const response = await fetch('/admin/api/create-post', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(postData)
        });

        const result = await response.json();

        if (result.success) {
          statusDiv.textContent = `✓ 公開成功: ${result.filename}`;
          statusDiv.className = 'text-sm text-green-600';

          // フォームリセット
          form.reset();
          editor.value('');
          dateInput.value = today;  // 日付も今日に戻す
        } else {
          statusDiv.textContent = `エラー: ${result.error}`;
          statusDiv.className = 'text-sm text-red-600';
        }
      } catch (error) {
        statusDiv.textContent = `エラー: ${(error as Error).message}`;
        statusDiv.className = 'text-sm text-red-600';
      }
    });
  </script>
</BaseLayout>