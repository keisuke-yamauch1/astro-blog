---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="管理画面ログイン">
  <div class="max-w-md mx-auto mt-20">
    <h1 class="text-3xl font-bold mb-8">管理画面ログイン</h1>

    <form id="login-form" class="space-y-4">
      <div>
        <label for="password" class="block mb-2">パスワード:</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border rounded dark:bg-gray-800 dark:border-gray-700"
          required
        />
      </div>

      <button
        type="submit"
        class="w-full px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
      >
        ログイン
      </button>

      <div id="error" class="text-red-600 hidden"></div>
    </form>
  </div>

  <script>
    const form = document.getElementById('login-form') as HTMLFormElement;
    const errorDiv = document.getElementById('error') as HTMLDivElement;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const password = (document.getElementById('password') as HTMLInputElement).value;

      try {
        const response = await fetch('/admin/api/auth', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ password })
        });

        const data = await response.json();

        if (data.success) {
          localStorage.setItem('admin_token', data.token);
          window.location.href = '/admin';
        } else {
          errorDiv.textContent = 'パスワードが正しくありません';
          errorDiv.classList.remove('hidden');
        }
      } catch (error) {
        errorDiv.textContent = 'エラーが発生しました';
        errorDiv.classList.remove('hidden');
      }
    });
  </script>
</BaseLayout>
