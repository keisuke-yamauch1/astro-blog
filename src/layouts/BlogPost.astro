---
import BaseLayout from './BaseLayout.astro'
import PostDate from '../components/PostDate.astro'
import PostTags from '../components/PostTags.astro'
import HatenaStar from '../components/HatenaStar.astro'
import { siteConfig } from '../config'
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { title, date, tags, image } = post.data
const postUrl = `${Astro.site}blog/${post.data.id}`

// 実験的に特定のブログ記事のみにスターを表示
const experimentalBlogPostIds = [2];
const shouldShowStar = experimentalBlogPostIds.includes(post.data.id);
---

<BaseLayout title={title}>
  {shouldShowStar && (
    <Fragment slot="head">
      <script type="text/javascript" src="https://s.hatena.ne.jp/js/HatenaStar.js"></script>
      <script type="text/javascript" set:html={`
        document.addEventListener('DOMContentLoaded', function() {
          console.log('DOMContentLoaded - はてなスター初期化開始');
          
          if (window.Hatena && window.Hatena.Star) {
            window.Hatena.Star.SiteConfig = {
              entryNodes: {
                'div.hatena-star-entry': {
                  uri: '${postUrl}',
                  title: '${title}',
                  container: 'div.hatena-star-entry'
                }
              }
            };
            
            console.log('はてなスター設定完了:', window.Hatena.Star.SiteConfig);
            
            setTimeout(function() {
              if (window.Hatena.Star.EntryLoader) {
                console.log('はてなスターエントリーローダー実行');
                window.Hatena.Star.EntryLoader.loadEntries();
              }
            }, 500);
          } else {
            console.error('Hatena.Starが利用できません');
          }
        });
      `}></script>
    </Fragment>
  )}
  
  <article class="max-w-3xl mx-auto px-4">
    {image && <img src={image} alt={title} class="w-full h-[400px] object-cover rounded-xl shadow-lg mb-8" loading="eager" />}
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        {title}
      </h1>
      <div class="mb-6">
        <PostDate date={date} />
      </div>
      {tags && <PostTags tags={tags} />}
    </header>
    <div
      class="prose prose-lg dark:prose-invert
      prose-headings:text-gray-900 dark:prose-headings:text-gray-100
      prose-p:text-gray-700 dark:prose-p:text-gray-300
      prose-a:text-primary-600 dark:prose-a:text-primary-400
      hover:prose-a:text-primary-500 dark:hover:prose-a:text-primary-300
      prose-strong:text-gray-900 dark:prose-strong:text-gray-100
      prose-code:text-gray-300 dark:prose-code:text-gray-400
      prose-blockquote:text-gray-700 dark:prose-blockquote:text-gray-300
      prose-span:text-gray-700 dark:prose-span:text-gray-300
      prose-li:text-gray-700 dark:prose-li:text-gray-300
      max-w-none"
    >
      <slot />
    </div>
    <footer class="mt-12">
      <HatenaStar url={postUrl} title={title} author={siteConfig.hatenaUser} postId={post.data.id} contentType="blog" />
    </footer>
  </article>
</BaseLayout>
