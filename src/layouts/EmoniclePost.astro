---
import BaseLayout from './BaseLayout.astro'
import PostDate from '../components/PostDate.astro'
import ArticleContent from '../components/ArticleContent.astro';
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'emonicle'>
}

const { post } = Astro.props

// Safety check for post and post.data
if (!post || !post.data) {
  throw new Error('Post or post.data is undefined in EmoniclePost layout');
}

const { title, date, image } = post.data
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<BaseLayout title={title}>
  <article class="max-w-3xl mx-auto px-4">
    {image && <img src={image} alt={title} class="w-full h-[400px] object-cover rounded-xl shadow-lg mb-8" loading="eager" />}
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        {title}
      </h1>
      <a href={canonicalURL.href} class="post-url" style="display: none;"></a>
      <div class="mb-6">
        <PostDate date={date} />
      </div>
    </header>
    <ArticleContent>
      <slot />
    </ArticleContent>
  </article>
</BaseLayout>