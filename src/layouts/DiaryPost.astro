---
import BaseLayout from './BaseLayout.astro'
import ArticleContent from '../components/ArticleContent.astro';
import type { CollectionEntry } from 'astro:content'

interface Props {
  entry: CollectionEntry<'diary'>
  isPreview?: boolean
}

const { entry, isPreview = false } = Astro.props
const { title, date, weather, condition, image, draft } = entry.data
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<BaseLayout title={title}>
  <article class="max-w-3xl mx-auto px-4">
    {draft && !isPreview && (
      <div class="bg-yellow-100 dark:bg-yellow-900 border-l-4 border-yellow-500 p-4 mb-8 rounded">
        <p class="text-yellow-800 dark:text-yellow-200">
          <strong>下書き:</strong> この記事はまだ公開されていません。
        </p>
      </div>
    )}
    {image && <img src={image} alt={title} class="w-full h-[400px] object-cover rounded-xl shadow-lg mb-8" loading="eager" />}
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        {title}
      </h1>
      <a href={canonicalURL.href} class="post-url" style="display: none;"></a>
      <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 text-gray-600 dark:text-gray-300">
        <div class="flex items-center">
          <span class="font-semibold mr-2 min-w-[2.5em]">日付:</span>
          <span>{date.toLocaleDateString('ja-JP')}</span>
        </div>
        {weather && <div class="flex items-center">
          <span class="font-semibold mr-2 min-w-[2.5em]">天気:</span>
          <span>{weather}</span>
        </div>}
        {condition && <div class="flex items-center">
          <span class="font-semibold mr-2 min-w-[2.5em]">調子:</span>
          <span>{condition}</span>
        </div>}
      </div>
    </header>
    <ArticleContent class="diary-content">
      <slot />
    </ArticleContent>
  </article>
</BaseLayout>

<style>
  /* ネストしたulの上下マージンを除去（日記専用） */
  :global(.diary-content .prose li ul) {
    margin-top: 0;
    margin-bottom: 0;
  }

  :global(.diary-content .prose li ol) {
    margin-top: 0;
    margin-bottom: 0;
  }
</style>
