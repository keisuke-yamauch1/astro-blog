---
import { Image } from 'astro:assets';

interface Props {
  href: string;
  title: string;
  image?: string;
  showMarginBottom?: boolean;
}

const { href, title, image, showMarginBottom = true } = Astro.props;

const imageWidth = 800;
const imageHeight = 400;
---

<a href={href} class="block">
  <article class:list={[
    "p-6 bg-gray-50 dark:bg-gray-800/60 rounded-xl",
    "shadow-md hover:shadow-xl dark:shadow-gray-700/30",
    "dark:hover:shadow-2xl dark:hover:shadow-primary-500/20",
    "border border-gray-700 dark:border-gray-500/50",
    "transition-all duration-200",
    { "mb-12": showMarginBottom }
  ]}>
    {image && (
      <div class="mb-4">
        <Image
          src={image}
          alt={title}
          width={imageWidth}
          height={imageHeight}
          decoding="async"
          loading="eager"
          class="w-full h-48 object-cover rounded-lg shadow-md hover:shadow-lg transition-shadow"
        />
      </div>
    )}
    <header>
      <h2 class="text-xl font-bold mb-2 text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400">
        {title}
      </h2>
      <slot name="meta" />
    </header>
    <slot name="content" />
    <slot name="footer" />
  </article>
</a>
