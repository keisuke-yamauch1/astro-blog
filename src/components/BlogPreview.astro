---
import type { CollectionEntry } from 'astro:content';
import PreviewCard from './PreviewCard.astro';
import PostDate from './PostDate.astro';
import PostTags from './PostTags.astro';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, date, tags, image } = post.data;
---

<PreviewCard href={`/blog/${post.data.id}`} title={title} image={image}>
  <div slot="meta" class="mb-4">
    <PostDate date={date} />
  </div>
  <p slot="content" class="text-gray-800 dark:text-gray-200 mb-4">{description}</p>
  <div slot="footer">
    {tags && <PostTags tags={tags} />}
  </div>
</PreviewCard>
